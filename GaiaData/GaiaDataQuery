SELECT c."dist", a."atlaspositions_oid",b."phot_g_mean_mag",b."phot_bp_mean_mag",b."phot_rp_mean_mag", a."objid", b."ra", b."ra_error", b."dec", b."dec_error", b."parallax", b."parallax_error", b."parallax_over_error" FROM user_xhall.atlaspositions AS a, gaiadr2.gaia_source AS b, user_xhall.xmatch_atlaspositions_gaia_source AS c WHERE (c.atlaspositions_atlaspositions_oid = a.atlaspositions_oid AND c.gaia_source_source_id = b.source_id) AND (phot_bp_rp_excess_factor < 1.3+0.06*power(phot_bp_mean_mag-phot_rp_mean_mag,2) AND phot_bp_rp_excess_factor > 1.0+0.015*power(phot_bp_mean_mag-phot_rp_mean_mag,2) AND astrometric_chi2_al/(astrometric_n_good_obs_al-5) < 1.44*greatest(1,exp(-0.4*(phot_g_mean_mag-19.5))))
